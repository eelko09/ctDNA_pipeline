<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>ctDNA Pipeline Report</title>
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <style>
        body { font-family: Arial, sans-serif; margin: 30px; }
        h1, h2 { color: #2c3e50; }
        table { border-collapse: collapse; width: 100%; margin-bottom: 30px; }
        th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
        th { background-color: #f2f2f2; }
        .section { margin-bottom: 50px; }
        .empty { padding: 12px; background: #fff3cd; border: 1px solid #ffeeba; border-radius: 6px; }
        code { background: #f6f8fa; padding: 2px 4px; border-radius: 4px; }
    </style>
</head>
<body>
    <h1>ctDNA Pipeline Summary Report</h1>

    <div class="section">
        <h2>QC Summary</h2>

        {% if qc is defined and qc|length > 0 %}
        <table>
            <thead>
                <tr>
                    {% for col in qc[0].keys() %}
                    <th>{{ col }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for row in qc %}
                <tr>
                    {% for col in row.keys() %}
                    <td>{{ row[col] }}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="empty">
            <b>No QC records found.</b><br>
            This usually means the QC parsing step produced no usable rows.
        </div>
        {% endif %}
    </div>

    <div class="section">
        <h2>Variant Summary</h2>

        {% if variants is defined and variants|length > 0 %}
        <table>
            <thead>
                <tr>
                    {% for col in variants[0].keys() %}
                    <th>{{ col }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for row in variants %}
                <tr>
                    {% for col in row.keys() %}
                    <td>{{ row[col] }}</td>
                    {% endfor %}
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="empty">
            <b>No variants detected.</b><br>
            This is common if Mutect2 found no calls or everything was filtered out.
        </div>
        {% endif %}
    </div>

    <div class="section">
        <h2>Visualizations</h2>

        {% if qc is defined and qc|length > 0 %}
        <h3>Mean Coverage per Sample</h3>
        <div id="coverage_plot" style="width:100%;height:400px;"></div>

        <h3>Estimated Contamination per Sample</h3>
        <div id="contamination_plot" style="width:100%;height:400px;"></div>

        <script>
            // Extract values safely (may contain nulls)
            var samples = {{ qc | map(attribute='sample') | list | safe }};
            var mean_coverage = {{ qc | map(attribute='mean_coverage') | list | safe }};
            var contamination = {{ qc | map(attribute='contamination') | list | safe }};

            // Coverage plot
            var coverage_data = [{
                x: samples,
                y: mean_coverage,
                type: 'bar'
            }];
            var coverage_layout = {
                title: 'Mean Coverage per Sample',
                xaxis: { title: 'Sample' },
                yaxis: { title: 'Mean Coverage' }
            };
            Plotly.newPlot('coverage_plot', coverage_data, coverage_layout);

            // Contamination plot
            var contamination_data = [{
                x: samples,
                y: contamination,
                type: 'bar'
            }];
            var contamination_layout = {
                title: 'Estimated Contamination per Sample',
                xaxis: { title: 'Sample' },
                yaxis: { title: 'Contamination Fraction' }
            };
            Plotly.newPlot('contamination_plot', contamination_data, contamination_layout);
        </script>
        {% else %}
        <div class="empty">
            <b>No QC data available for plots.</b><br>
            Coverage/contamination plots require at least one QC row.
        </div>
        {% endif %}
    </div>
</body>
</html>
